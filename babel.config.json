{
  "presets": ["module:metro-react-native-babel-preset"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@assets": "./src/assets",
          "@constants": "./src/constants",
          "@components": "./src/components",
          "@hooks": "./src/hooks",
          "@navigation": "./src/navigation",
          "@redux/*": "./src/redux",
          "@ui": "./src/ui",
          "@utils": "./src/utils"
        }
      }
    ]
  ]
}
